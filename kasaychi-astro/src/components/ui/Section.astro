---
interface Props {
  id?: string;
  class?: string;
  background?: 'white' | 'light' | 'dark' | 'gradient';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  id, 
  class: className = '',
  background = 'white',
  padding = 'lg'
} = Astro.props;

const backgrounds = {
  white: 'bg-white',
  light: 'bg-bg-light',
  dark: 'bg-bg-dark text-white',
  gradient: 'bg-gradient-to-br from-forest-900 via-bg-dark to-forest-950 text-white',
};

const paddings = {
  sm: 'py-12',
  md: 'py-16',
  lg: 'py-20 lg:py-28',
  xl: 'py-24 lg:py-32',
};

const classes = `${backgrounds[background]} ${paddings[padding]} ${className}`;
---

<section id={id} class={classes}>
  <div class="section-padding">
    <div class="container-custom">
      <slot />
    </div>
  </div>
</section>
