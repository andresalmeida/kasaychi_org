---
import Layout from '../layouts/Layout.astro';
import FadeIn from '../components/ui/FadeIn.tsx';
import StaggerContainer, { StaggerItem } from '../components/ui/StaggerContainer.tsx';
import { Award, Leaf, HandMetal, Clock, Medal, Star, ExternalLink, ArrowRight, Truck, Heart, Check } from 'lucide-react';

const products = [
  {
    name: 'Mozzarella Artesanal',
    description: 'Suave y cremoso, perfecto para pizzas y ensaladas. Elaborado diariamente con leche fresca.',
    image: '/images/queso_mozarella.png',
    rating: 5,
  },
  {
    name: 'Orégano & Ají',
    description: 'Una explosión de sabores que combina la cremosidad del queso con el aroma del orégano y el toque picante del ají.',
    image: '/images/queso_oregano.png',
    rating: 4.5,
  },
  {
    name: 'Curado Especial',
    description: 'Nuestro queso de maduración prolongada con sabor intenso y textura firme. Ideal para los paladares más exigentes.',
    image: '/images/queso_curado.png',
    rating: 5,
  },
];

const reasons = [
  { icon: Award, title: 'Ganado Propio', description: 'Nuestras vacas pastorean libremente en campos naturales, garantizando leche de la más alta calidad.' },
  { icon: HandMetal, title: 'Proceso 100% Artesanal', description: 'Cada queso es elaborado a mano siguiendo recetas familiares transmitidas de generación en generación.' },
  { icon: Medal, title: 'Calidad Certificada', description: 'Cumplimos con todos los estándares sanitarios y de calidad, reconocidos en toda la región.' },
  { icon: Leaf, title: '100% Natural', description: 'Sin conservantes artificiales, colorantes ni aditivos químicos. Solo ingredientes naturales.' },
  { icon: Truck, title: 'Entrega Fresca', description: 'Sistema de entrega que mantiene la cadena de frío para garantizar frescura hasta tu mesa.' },
  { icon: Heart, title: 'Pasión Familiar', description: 'Cada producto lleva el amor y dedicación de una familia que vive la tradición quesera.' },
];

const stats = [
  { value: '70+', label: 'Años de Experiencia' },
  { value: '1000+', label: 'Clientes Satisfechos' },
  { value: '15+', label: 'Variedades de Queso' },
];
---

<Layout 
  title="IntiChuri Queso"
  description="Los mejores quesos artesanales elaborados con tradición ancestral. Calidad premium, sabor auténtico. IntiChuri Queso - Tradición Ancestral, Sabor Auténtico."
>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/inti_churi_premium.png" alt="Queso Inti Churi Premium" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-r from-institutional-blue/95 via-institutional-blue/80 to-transparent"></div>
    </div>
    
    <div class="relative w-full py-32">
      <div class="max-w-7xl mx-auto px-8">
        <div class="max-w-2xl">
          <FadeIn client:load>
            <div class="flex items-center gap-2 mb-6">
              <div class="w-12 h-12 bg-white/10 flex items-center justify-center">
                <img src="/images/KasaychiKunapak.png" alt="IntiChuri" class="w-8 h-8 object-contain" />
              </div>
              <span class="text-ancestral-gold font-bold uppercase tracking-wider text-xs">Producto de la Comunidad Kasaychi</span>
            </div>
            <h1 class="text-5xl lg:text-7xl text-white font-bold mb-4">
              IntiChuri
              <span class="block text-ancestral-gold">Queso</span>
            </h1>
            <p class="text-2xl text-ancestral-gold italic mb-6 font-serif">
              Tradición Ancestral, Sabor Auténtico
            </p>
            <p class="text-lg text-white leading-relaxed mb-8 font-serif">
              Descubre los mejores quesos artesanales elaborados con técnicas tradicionales 
              y la pasión de generaciones. Más de 70 años de experiencia en cada pieza.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 mb-12">
              <a href="#productos" class="inline-flex items-center justify-center gap-2 bg-ancestral-gold text-white px-8 py-4 font-bold uppercase text-xs tracking-[0.2em] hover:bg-ancestral-gold/90 transition-colors">
                Ver Productos
                <ArrowRight className="w-5 h-5" />
              </a>
              <a 
                href="https://docs.google.com/forms/d/e/1FAIpQLSfdKlGXTKcVvKPovsqa4NjN7CDTcL3lrmcvi9CW0_g1bTN2aQ/viewform?usp=dialog" 
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center gap-2 border-2 border-white/30 text-white px-8 py-4 font-bold uppercase text-xs tracking-[0.2em] hover:bg-white/10 transition-colors"
              >
                Comprar Ahora
                <ExternalLink className="w-5 h-5" />
              </a>
            </div>
            
            <!-- Features badges -->
            <div class="flex flex-wrap gap-4">
              {['Calidad Premium', '100% Natural', 'Artesanal'].map((badge) => (
                <div class="flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20">
                  <Award className="w-4 h-4 text-ancestral-gold" />
                  <span class="text-white text-sm font-medium">{badge}</span>
                </div>
              ))}
            </div>
          </FadeIn>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-8">
      <StaggerContainer client:load className="grid md:grid-cols-3 gap-8">
        {stats.map((stat) => (
          <StaggerItem client:load>
            <div class="text-center">
              <p class="text-5xl lg:text-6xl font-bold text-ancestral-gold mb-2">{stat.value}</p>
              <p class="text-slate-600 font-medium uppercase tracking-wider">{stat.label}</p>
            </div>
          </StaggerItem>
        ))}
      </StaggerContainer>
    </div>
  </section>

  <!-- Featured Product -->
  <section id="productos" class="py-20 bg-paper border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <FadeIn client:load direction="left">
          <div class="relative">
            <div class="absolute -top-4 -right-4 w-full h-full bg-ancestral-gold/20"></div>
            <div class="relative overflow-hidden shadow-2xl">
              <img 
                src="/images/inti_churi_premium.png" 
                alt="Queso IntiChuri Premium"
                class="w-full h-auto object-cover grayscale hover:grayscale-0 transition-all duration-700"
              />
              <div class="absolute top-4 left-4">
                <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-ancestral-gold text-white text-xs font-bold uppercase tracking-wider shadow-lg">
                  <Star className="w-4 h-4 fill-current" />
                  Más Vendido
                </span>
              </div>
            </div>
          </div>
        </FadeIn>
        
        <div>
          <FadeIn client:load direction="right">
            <h2 class="text-4xl lg:text-5xl font-bold text-institutional-blue mb-4">
              Queso Inti Churi <span class="text-ancestral-gold">Premium</span>
            </h2>
            <div class="flex items-center gap-2 mb-6">
              <div class="flex">
                {[...Array(5)].map(() => (
                  <Star className="w-5 h-5 text-ancestral-gold fill-current" />
                ))}
              </div>
              <span class="text-slate-600 text-sm">(4.9/5 - 127 reseñas)</span>
            </div>
            <p class="text-slate-600 text-lg leading-relaxed mb-6 font-serif">
              Nuestro producto insignia elaborado con leche fresca de vacas criadas en pastizales 
              naturales. Siguiendo técnicas ancestrales, cada pieza es una obra maestra del sabor 
              auténtico.
            </p>
            <ul class="space-y-3 mb-8">
              {['Leche 100% fresca del día', 'Proceso artesanal tradicional', 'Sin conservantes artificiales', 'Maduración controlada'].map((item) => (
                <li class="flex items-center gap-3 text-slate-600">
                  <div class="w-6 h-6 bg-ancestral-gold/10 flex items-center justify-center">
                    <Check className="w-4 h-4 text-ancestral-gold" />
                  </div>
                  {item}
                </li>
              ))}
            </ul>
            <a 
              href="https://docs.google.com/forms/d/e/1FAIpQLSfdKlGXTKcVvKPovsqa4NjN7CDTcL3lrmcvi9CW0_g1bTN2aQ/viewform?usp=dialog" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 bg-ancestral-gold text-white px-8 py-4 font-bold uppercase text-xs tracking-[0.2em] hover:bg-ancestral-gold/90 transition-colors"
            >
              Hacer Pedido
              <ArrowRight className="w-5 h-5" />
            </a>
          </FadeIn>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <FadeIn client:load>
          <span class="text-xs font-bold uppercase tracking-[0.3em] text-ancestral-gold mb-4 block">Nuestra Línea</span>
          <h2 class="text-4xl font-bold text-institutional-blue">
            Variedades de <span class="text-ancestral-gold">Queso</span>
          </h2>
        </FadeIn>
      </div>
      
      <StaggerContainer client:load className="grid md:grid-cols-3 gap-8">
        {products.map((product) => (
          <StaggerItem client:load>
            <div class="group bg-institutional-blue overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
              <div class="relative h-56 overflow-hidden">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-institutional-blue to-transparent"></div>
              </div>
              <div class="p-6 text-center">
                <div class="flex justify-center mb-3">
                  <div class="flex">
                    {[...Array(5)].map((_, i) => (
                      <Star 
                        className={`w-4 h-4 ${i < Math.floor(product.rating) ? 'text-ancestral-gold fill-current' : 'text-white'}`} 
                      />
                    ))}
                  </div>
                </div>
                <h3 class="text-xl text-white font-bold mb-3">{product.name}</h3>
                <p class="text-white text-sm leading-relaxed mb-6 font-serif">{product.description}</p>
                <a 
                  href="https://docs.google.com/forms/d/e/1FAIpQLSfdKlGXTKcVvKPovsqa4NjN7CDTcL3lrmcvi9CW0_g1bTN2aQ/viewform?usp=dialog" 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center gap-2 bg-ancestral-gold text-white px-6 py-3 font-bold uppercase text-xs tracking-[0.2em] hover:bg-ancestral-gold/90 transition-colors"
                >
                  Hacer Pedido
                </a>
              </div>
            </div>
          </StaggerItem>
        ))}
      </StaggerContainer>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-20 bg-paper border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <FadeIn client:load direction="left">
          <div>
            <span class="text-xs font-bold uppercase tracking-[0.3em] text-ancestral-gold mb-4 block">Nuestra Historia</span>
            <h2 class="text-4xl lg:text-5xl font-bold text-institutional-blue mb-6">
              Una Tradición de <span class="text-ancestral-gold">Generaciones</span>
            </h2>
            <p class="text-slate-600 text-lg leading-relaxed mb-6 font-serif">
              Desde hace más de 70 años, la familia Inti Churi ha dedicado su vida a perfeccionar 
              el arte de la elaboración de quesos artesanales. Ubicados en los hermosos paisajes 
              de Kasaychi, hemos mantenido vivas las técnicas ancestrales que nuestros abuelos nos enseñaron.
            </p>
            <p class="text-slate-600 text-lg leading-relaxed mb-8 font-serif">
              Cada día ordeñamos nuestras propias vacas, alimentadas con pastos naturales de las 
              montañas andinas, para crear productos que honran tanto la tradición como la calidad 
              que nuestros clientes merecen.
            </p>
            <div class="grid grid-cols-2 gap-4">
              <div class="flex items-center gap-3">
                <Clock className="w-6 h-6 text-ancestral-gold" />
                <span class="text-slate-700 font-medium">70+ años de experiencia</span>
              </div>
              <div class="flex items-center gap-3">
                <Medal className="w-6 h-6 text-ancestral-gold" />
                <span class="text-slate-700 font-medium">Reconocidos en la región</span>
              </div>
            </div>
          </div>
        </FadeIn>
        
        <FadeIn client:load direction="right">
          <div class="relative">
            <div class="absolute -bottom-4 -right-4 w-full h-full bg-ancestral-gold/20"></div>
            <div class="relative overflow-hidden shadow-2xl">
              <img 
                src="/images/queso_tradicion.jpg" 
                alt="Tradición familiar en la elaboración de quesos"
                class="w-full h-auto object-cover grayscale hover:grayscale-0 transition-all duration-700"
              />
            </div>
          </div>
        </FadeIn>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-institutional-blue">
    <div class="max-w-7xl mx-auto px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <FadeIn client:load>
          <span class="text-xs font-bold uppercase tracking-[0.3em] text-ancestral-gold mb-4 block">Diferenciación</span>
          <h2 class="text-4xl font-bold text-white mb-6">
            Por Qué Elegir <span class="text-ancestral-gold">Inti Churi</span>
          </h2>
        </FadeIn>
      </div>
      
      <StaggerContainer client:load className="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {reasons.map((reason) => (
          <StaggerItem client:load>
            <div class="bg-white/10 border border-white/20 p-6 hover:bg-white/20 transition-colors">
              <div class="w-12 h-12 bg-ancestral-gold/30 flex items-center justify-center mb-4">
                <reason.icon className="w-6 h-6 text-ancestral-gold" />
              </div>
              <h3 class="text-lg text-white font-bold mb-2">{reason.title}</h3>
              <p class="text-white text-sm leading-relaxed font-serif">{reason.description}</p>
            </div>
          </StaggerItem>
        ))}
      </StaggerContainer>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <FadeIn client:load>
      <div class="max-w-7xl mx-auto px-8">
        <div class="relative bg-institutional-blue overflow-hidden">
          <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0 chacana-bg"></div>
          </div>
          
          <div class="relative py-16 lg:py-20 px-8 text-center">
            <h2 class="text-3xl lg:text-5xl text-white font-bold mb-6">
              Prueba el Sabor de la Tradición
            </h2>
            <p class="text-xl text-white max-w-2xl mx-auto mb-10 font-serif">
              Haz tu pedido hoy y disfruta de los mejores quesos artesanales de los Andes ecuatorianos.
            </p>
            <a 
              href="https://docs.google.com/forms/d/e/1FAIpQLSfdKlGXTKcVvKPovsqa4NjN7CDTcL3lrmcvi9CW0_g1bTN2aQ/viewform?usp=dialog" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 bg-white text-institutional-blue px-8 py-4 font-bold uppercase text-xs tracking-[0.2em] hover:bg-paper transition-colors"
            >
              Comprar Ahora
              <ExternalLink className="w-5 h-5" />
            </a>
          </div>
        </div>
      </div>
    </FadeIn>
  </section>
</Layout>
