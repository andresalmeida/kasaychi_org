---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title, 
  description = "Comunidad Kasaychi - Inti Churi. Una comunidad indígena ancestral ubicada en Guaranda, Ecuador.",
  image = "/images/KasaychiKunapak.png",
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteTitle = "Comunidad Kasaychi";
const fullTitle = title ? `${title} | ${siteTitle}` : siteTitle;
---

<!DOCTYPE html>
<html lang="es-EC" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  <meta name="keywords" content="Comunidad Kasaychi, Inti Churi, Kichwa, Guaranda, Ecuador, comunidad indígena, tradición ancestral, queso artesanal, ODS, desarrollo sostenible" />
  <meta name="robots" content="index, follow" />
  <meta name="author" content="Comunidad Kasaychi" />
  
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/png" href="/images/KasaychiKunapak.png" />
  
  <!-- Open Graph -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={fullTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.site)} />
  
  <meta name="theme-color" content="#1A365D" />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Comunidad Kasaychi",
    "alternateName": "Inti Churi",
    "url": Astro.site?.toString(),
    "logo": new URL("/images/KasaychiKunapak.png", Astro.site).toString(),
    "description": description,
    "foundingDate": "1981",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Km 19 Vía Riobamba, sector Kasaichi",
      "addressLocality": "Guaranda",
      "addressRegion": "Bolívar",
      "addressCountry": "EC"
    },
    "sameAs": [
      "https://www.facebook.com/people/Inti-Churi/100057352064394/"
    ]
  })} />
</head>
<body class="min-h-screen bg-paper text-slate-900 antialiased chacana-bg">
  <!-- Skip Link para accesibilidad -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-institutional-blue text-white p-4 z-[70] font-bold uppercase text-xs tracking-wider">
    Saltar al contenido principal
  </a>
  
  <!-- Wiphala Border -->
  <div class="wiphala-border fixed top-0 w-full z-[60]"></div>
  
  <Header />
  <main id="main-content" class="flex-1">
    <slot />
  </main>
  <Footer />
</body>
</html>
